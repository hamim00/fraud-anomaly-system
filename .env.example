# =============================================================================
# Fraud Detection System - Environment Variables
# =============================================================================
# Copy this file to .env and customize as needed
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
PGHOST=postgres
PGPORT=5432
PGDATABASE=fraud_db
PGUSER=fraud
PGPASSWORD=fraud

# -----------------------------------------------------------------------------
# Kafka/Redpanda Configuration
# -----------------------------------------------------------------------------
KAFKA_BROKERS=redpanda:9092
KAFKA_TOPIC=transactions

# -----------------------------------------------------------------------------
# Producer Configuration
# -----------------------------------------------------------------------------
RATE_PER_SEC=10
USERS=2000
MERCHANTS=250
CARDS_PER_USER=2
RANDOM_SEED=42

# -----------------------------------------------------------------------------
# Consumer Configuration
# -----------------------------------------------------------------------------
KAFKA_GROUP_ID=fraud-consumer
AUTO_OFFSET_RESET=earliest
BATCH_COMMIT_EVERY_N=50

# -----------------------------------------------------------------------------
# MLflow Configuration
# -----------------------------------------------------------------------------
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_EXPERIMENT=fraud-detection

# -----------------------------------------------------------------------------
# Model Service Configuration
# -----------------------------------------------------------------------------
MODEL_NAME=fraud-detector-xgboost
MODEL_VERSION=1
THRESHOLD_REVIEW=0.3
THRESHOLD_BLOCK=0.7
CREATE_ALERTS=true
TOP_K_FEATURES=5

# -----------------------------------------------------------------------------
# Drift Detector Configuration
# -----------------------------------------------------------------------------
DRIFT_CHECK_INTERVAL=5
DRIFT_MIN_SAMPLES=100
DRIFT_REFERENCE_SIZE=5000
DRIFT_CURRENT_SIZE=1000
DRIFT_THRESHOLD=0.05

# -----------------------------------------------------------------------------
# Monitoring Configuration
# -----------------------------------------------------------------------------
METRICS_PORT=9091
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Grafana Configuration
# -----------------------------------------------------------------------------
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin
GF_USERS_ALLOW_SIGN_UP=false
